<!DOCTYPE html>
<html lang="pt-br">

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    let inputIdConexao
    let idConexao

    socket.on('connect', () => {
        console.log('Conectado ao servidor com ID:', socket.id);

        setTimeout(() => {
            idConexao = socket.id;
            inputIdConexao = document.getElementById('idConexao');

            if (inputIdConexao) inputIdConexao.value = idConexao;
        }, 200);
    });
</script>

<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        label {
            font-weight: bold;
        }

        label,
        input {
            display: block;
            width: 300px;
            margin-bottom: 15px;
            margin-top: -8px;
        }

        input[type="text"] {
            padding: 10px;
            font-size: 16px;
            position: relative;
            margin-left: auto;
            margin-right: auto;
        }

        button {
            padding: 10px;
            background-color: #007bff;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 style="margin-bottom: 25px;">Informe seu nome de usuário</h2>
        <form action="/homepage-chat" method="POST">
            <label for="idConexao">ID da conexão:</label>
            <input type="text" id="idConexao" name="idConexao" readonly required>
            <label for="nomeUsuario" style="margin-top: 15px;">Nome de usuário:</label>
            <input type="text" id="nomeUsuario" name="nomeUsuario" required>
            <button type="submit">Entrar na Sala</button>
        </form>
    </div>
</body>

</html>