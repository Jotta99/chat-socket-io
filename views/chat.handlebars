<!DOCTYPE html>
<html lang="pt-br">

<script src="/socket.io/socket.io.js"></script>

<head>
    <meta charset="UTF-8">
    <title>Chat</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #ececec;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        #chat-container {
            width: 400px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        #user-header {
            background: #007bff;
            color: white;
            padding: 15px;
            font-size: 18px;
        }

        #chat-messages {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
            border-top: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            max-height: 300px !important;
        }

        #chat-input {
            display: flex;
            padding: 10px;
        }

        #chat-input input[type="text"] {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        #chat-input button {
            margin-left: 10px;
            padding: 10px 15px;
            background: #007bff;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        #chat-input button:hover {
            background: #0056b3;
        }
    </style>
</head>

<body>

    <div id="chat-container">
        <div id="user-header">
            Usu√°rio: <strong>{{nomeUsuario}}</strong>
        </div>

        <div id="chat-messages">
            {{#each mensagens}}<p><strong>{{usuario}}</strong> {{texto}}</p>
            {{else}}
            <p>Envia uma mensagem para iniciar a Bate Papo!</p>
            {{/each}}
        </div>

        <form id="chat-input" method="POST">
            <input type="text" id="mensagem" name="mensagem" placeholder="Digite sua mensagem..." required>
            <button type="submit">Enviar</button>
        </form>
    </div>

</body>

</html>


<script>
    const socket = io();
    const nomeUsuario = '{{nomeUsuario}}';
    const chatBox = document.getElementById('chat-messages');
    const form = document.getElementById('chat-input');
    const input = document.getElementById('mensagem');

    setTimeout(() => {
        input.focus();
    }, 100);

    form.addEventListener('submit', (e) => {
        e.preventDefault();
        const texto = input.value.trim();
        if (texto !== '') {
            console.log(`Enviando mensagem: ${texto}`);
            socket.emit('mensagem', { usuario: nomeUsuario, texto });
            input.value = '';
        }
    });

    socket.on('mensagem', (data) => {
        const p = document.createElement('p');
        p.innerHTML = `<strong>${data.usuario}:</strong> ${data.texto}`;
        chatBox.appendChild(p);
        chatBox.scrollTop = chatBox.scrollHeight;
    });

</script>